<section class="grid-container content-spacing" id="index-encounters">
    <div id="banner-container">
        <div id="top-info">
            <div id="title">
                <h1>encounters</h1>
            </div>
            <div id="slash">
                <img src="img/encounters/slash.svg" alt="slash">
            </div>
        </div>
        <div id="quote">
            <div id="mark">
                <img src="img/encounters/quote-mark.svg" alt="quotation mark">
            </div>
            <div id="text">
                <h2>look up at the sky. ask yourself: is it yes or no? has the sheep eaten the flower?</h2>
            </div>
            <div id="box"></div>
        </div>
        <div id="scroll">
            <p>scroll down</p>
            <a href="#"><img src="img/encounters/scrolldown.svg" alt="scroll down arrow"></a>
            <p>to explore</p>
        </div>
    </div>
</section>

<section class="card-grid">
    <div>

        <section class="cards">
            <div>
                <img src="img/encounters/card1/crown.svg" alt="crown" class="card-icon" id="crown">
                <div id="card-info" class="card-icon">
                    <img src="img/encounters/card1/planet.svg" alt="planet icon" id="planet">
                    <h1 id="asteroid-number">asteroid 325</h1>
                </div>
                <!-- <img src="img/encounters/card1/planet.svg" alt="planet icon" class="card-icon" id="planet"> -->
                <aside>
                    <img src="img/encounters/card1/king.jpg" alt="the king on asteroid 325" id="king-img">
                    <div id="flip">
                        <img src="img/encounters/card1/flip-arrow.svg" alt="flip arrow" id="flip-arrow">
                        <p id="flip-to-read">flip to read</p>
                    </div>
                </aside>
                <section>
                    <h5>the king</h1>
                </section>
            </div>
        </section>

        <section id='flight-line-1'>
        </section>
    </div>
</section>

